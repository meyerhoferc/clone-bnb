<!DOCTYPE html>
<html lang="en" class="gr_getbootstrap_com">
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Portfolio Item - Start Bootstrap Template</title>

    <!-- Bootstrap Core CSS -->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="css/portfolio-item.css" rel="stylesheet">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>
<body data-gr-c-s-loaded="true">


    <!-- Page Content -->
    <div class="container">

        <!-- Portfolio Item Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header"><%= @listing.title %>
                </h1>
            </div>
        </div>
        <!-- /.row -->

        <!-- Portfolio Item Row -->
        <div class="row">

            <div class="col-md-8">
                <img class="img-responsive" src="<%= @listing.images.first.image_url %>" alt="">
            </div>

            <div class="col-md-3">
                <h3>Description:</h3>
                <p><%= @listing.description %></p>
            </div>
            <div class="col-md-1">
              <%= link_to "Book Now", new_listing_reservation_path(@listing), class: "btn btn-success" %></td>
            </div>

        </div>
        <!-- /.row -->

        <!-- Related Projects Row -->
        <div class="row">

            <div class="col-lg-12">
                <h3 class="page-header"></h3>
            </div>

            <div class="col-sm-3 col-xs-6">
                <a href="#">
                    <img class="img-responsive portfolio-item" src="<%= @listing.images[1].image_url %>" alt="">
                </a>
            </div>

            <div class="col-sm-3 col-xs-6">
                <a href="#">
                    <img class="img-responsive portfolio-item" src="<%= @listing.images[2].image_url %>" alt="">
                </a>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header">See how it looks</h3>
            </div>

            <div class="col-sm-3 col-xs-6">
                <a href="#">
                    <img class="img-responsive portfolio-item" src="<%= @listing.user.user_photo %>" alt="">
                </a>
            </div>
            <div class="col-sm-1 col-xs-1">
            </div>
            <div class="col-sm-3 col-xs-6">
                <h3>Amenities</h3>
                <ul>
                    <li>Elevator: <%= @listing.elevator %></li>
                    <li>Pets Allowed: <%=  @listing.pets_allowed%></li>
                    <li>Free Parking: <%=  @listing.free_parking%></li>
                    <li>Kid Friendly: <%=  @listing.family_kid_friendly%></li>
                    <li>Doorman: <%=  @listing.doorman%></li>
                    <li>Pool: <%=  @listing.pool%></li>
                    <li>Hot Tub: <%=  @listing.hot_tub%></li>
                    <li>Gym: <%=  @listing.gym%></li>
                    <li>A/C: <%=  @listing.air_conditioning%></li>
                    <li>Wheelchair Access: <%=  @listing.wheelchair_accessible%></li>
                    <li>Internet: <%=  @listing.internet%></li>
                    <li>Smoking Allowed: <%=  @listing.smoking_allowed%></li>
                    <li>Suitable for Events: <%=  @listing.suitable_for_events%></li>
                    <li>WiFi: <%=  @listing.wireless_internet%></li>
                    <li>Fireplace: <%=  @listing.indoor_fireplace%></li>
                    <li>Breakfast included: <%=  @listing.breakfast%></li>
                    <li>Kitchen: <%=  @listing.kitchen%></li>
                    <li>Cable TV: <%=  @listing.cable_tv%></li>
                    <li>Dryer: <%=  @listing.dryer%></li>
                    <li>Hair Dryer: <%=  @listing.hair_dryer%></li>
                    <li>Washing Machine: <%=  @listing.washer%></li>
                    <li>TV: <%=  @listing.tv%></li>
                    <li>Intercom: <%=  @listing.buzzer_wireless_intercom%></li>
                    <li>Iron: <%=  @listing.iron%></li>
                    <li>Heating: <%=  @listing.heating%></li>
                    <li>Private Entrance: <%=  @listing.private_entrance%></li> 
                </ul>
            </div>
        </div>
        <!-- /.row -->

        <hr>

        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                  <p>Copyright Â© CloneBnB 2017</p>
                </div>
            </div>
            <!-- /.row -->
        </footer>

    </div>
    <!-- /.container -->

    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>




</body>

</html>
